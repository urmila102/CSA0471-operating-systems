#include <stdio.h>
#include <stdlib.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <unistd.h>

#define SHM_SIZE 1024

int main() {
    int shmid;
    key_t key = 1234;
    char *str;

    shmid = shmget(key, SHM_SIZE, 0666|IPC_CREAT);
    str = (char*) shmat(shmid, (void*)0, 0);

    printf("Write Data: ");
    fgets(str, SHM_SIZE, stdin);
    printf("Data written in memory: %s\n", str);

    shmdt(str);
    shmctl(shmid, IPC_RMID, NULL);

    return 0;
}
